<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/yyl_speed_layout"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/yyl_layout_bg"
        android:gravity="center"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/yyl_speed_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/yyl_controller_speed" />

        <TextView
            android:id="@+id/yyl_speed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00/00:00"
            android:textColor="@color/yellow"
            android:textSize="14dip" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/yyl_bottom_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:max="1000"
        android:progressDrawable="@drawable/yyl_progress" />

    <FrameLayout
        android:id="@+id/yyl_cover_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/themeBg"
        android:visibility="visible">

        <ImageView
            android:id="@+id/yyl_video_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/yyl_video_cover_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"
            android:src="@drawable/yyl_play_icon"
            android:visibility="visible" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/yyl_buffering_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <ProgressBar
            style="@android:style/Widget.Holo.Light.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" />

        <TextView
            android:id="@+id/yyl_buffering_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="0%"
            android:textColor="@color/yellow"
            android:textSize="12dip"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yyl_tip_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="当前3G网络"
            android:textColor="@color/yellow" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:background="@drawable/yyl_layout_bg"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:text="继续播放"
            android:textColor="@color/yellow"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yyl_error_layout"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="@drawable/yyl_layout_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出错了点击重试"
            android:textColor="@color/yellow"
            android:textSize="16sp" />
    </LinearLayout>


</merge>