<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">


    <View
        android:id="@+id/yyl_touch_small"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp" />


    <LinearLayout
        android:id="@+id/yyl_down_layout_small"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@color/transformBlack90"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/yyl_play_pause_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/mediacontroller_button" />

        <TextView
            android:id="@+id/yyl_time_current_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:text="00:00"
            android:textColor="@color/text_yellow"
            android:textSize="10sp" />

        <SeekBar
            android:id="@+id/yyl_seekbar_small"
            style="@style/MediaController_SeekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:max="1000"
            android:progress="0"
            android:thumbOffset="2dip" />

        <TextView
            android:id="@+id/yyl_time_total_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:padding="1dp"
            android:text="00:00"
            android:textColor="@color/text_yellow"
            android:textSize="10sp" />

        <ImageButton
            android:id="@+id/yyl_change_small"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:src="@drawable/mediacontroller_change"
            android:visibility="visible" />
    </LinearLayout>
</merge>